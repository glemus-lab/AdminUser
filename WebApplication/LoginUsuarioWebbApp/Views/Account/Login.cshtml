@using LoginUsuarioWebApp.Models
@model UsuarioViewModel
@{
	Layout = null;
	ViewData["Title"] = "Inicio de Sesión";
}
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Login</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <style>
        body {
            background-color: #f8f9fa;
        }
        .full-height {
            min-height: 100vh;
        }
    </style>
</head>
<body>

    <div class="container">
        <div class="row justify-content-center align-items-center full-height">
            <div class="col-12 col-sm-10 col-md-6 col-lg-4">
                <div class="card shadow-lg border-0">
                    <div class="card-body p-4 p-sm-5">
                        <h3 class="text-center mb-4 fw-bold">Iniciar Sesión</h3>

                        <form asp-controller="Account" asp-action="Login" method="post">
                            <div class="mb-3">
                                <label asp-for="UserName" class="form-label fw-bold">Usuario</label>
                                <input asp-for="UserName" class="form-control form-control-lg" placeholder="Usuario" />
                                <span asp-validation-for="UserName" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="Password" class="form-label fw-bold">Contraseña</label>
                                <input asp-for="Password" type="password" class="form-control form-control-lg" placeholder="••••••••" />
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>

                            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                            <button type="submit" class="btn btn-primary btn-lg w-100 fw-bold shadow-sm">
                                Iniciar Sesión
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>